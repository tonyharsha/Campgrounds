<%- include('../partials/header')%>
<div class="row">
    <h1 style="text-align: center" class="text-primary">Payment Section</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>/" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="card number" placeholder="card number">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="cvv" placeholder="cvv">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" placeholder="<%=campground.price%>">
            </div>
             <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Make Payment</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include('../partials/footer')%>